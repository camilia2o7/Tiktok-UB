<Window x:Class="Tiktok_UB.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Excluded Users"
        Height="500"
        Width="350"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="#1E2124">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Background="Transparent" Height="60" Grid.Row="0">
            <TextBlock Text="Exclusions"
                       Foreground="White"
                       FontSize="22"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center" />
        </Border>

        <!-- Main Content Grid -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Username Label -->
            <TextBlock Text="Username"
                       Grid.Row="0"
                       Foreground="#7289DA"
                       FontSize="14"
                       Margin="0,10,0,5" />

            <!-- Username Input -->
            <TextBox Name="InputField"
                     Grid.Row="1"
                     Height="40"
                     Background="#2F3136"
                     Foreground="White"
                     BorderBrush="#4F545C"
                     BorderThickness="1"
                     FontSize="14"
                     Padding="10,0"
                     FontWeight="Bold"
                     VerticalContentAlignment="Center" />

            <!-- Submit Button -->
            <Button Name="SubmitButton"
                    Grid.Row="2"
                    Content="Add Exclusion"
                    Height="45"
                    Margin="0,15,0,15"
                    Background="#7289DA"
                    Foreground="White"
                    BorderThickness="0"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Click="SubmitButton_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5" />
                    </Style>
                </Button.Resources>
            </Button>

            <!-- Log Output Label -->
            <TextBlock Text="Exclusion List"
                       Grid.Row="3"
                       Foreground="#7289DA"
                       FontSize="14"
                       Margin="0,0,0,5" />

            <!-- Log Output -->
            <TextBox Name="LogOutput"
                     Grid.Row="3"
                     Margin="0,25,0,0"
                     Background="#2F3136"
                     Foreground="White"
                     BorderBrush="#4F545C"
                     BorderThickness="1"
                     IsReadOnly="True"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"
                     Padding="10" />
        </Grid>
    </Grid>
</Window>
