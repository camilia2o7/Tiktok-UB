<Window x:Class="Tiktok_UB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TikTok Unfollow Bot"
        Height="600"
        Width="900"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">

    <Border Background="#1E2433" CornerRadius="15" BorderThickness="1" BorderBrush="#2C3142">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="0">
                <Button x:Name="MinimizeButton"
                        Content="—"
                        Width="40"
                        Height="40"
                        Background="Transparent"
                        Foreground="White"
                        Click="MinimizeButton_Click"
                        BorderThickness="0" />
                <Button x:Name="AddButton"
                        Content="+"
                        Width="40"
                        Height="40"
                        Background="Transparent"
                        Foreground="White"
                        BorderThickness="0"
                        Margin="5,0"
                        Click="AddButton_Click"
                        ToolTip="Add Exclusions!" />
                <Button x:Name="CloseButton"
                        Content="X"
                        Width="40"
                        Height="40"
                        Background="Transparent"
                        Foreground="White"
                        Click="CloseButton_Click"
                        BorderThickness="0" />
            </StackPanel>

            <TextBlock Text="TikTok Unfollow Tool"
                       Grid.Row="1"
                       FontSize="28"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       Margin="0,20,0,10" />

            <StackPanel Grid.Row="2" HorizontalAlignment="Center" Margin="0,20">
                <TextBlock Text="Enter TikTok Username"
                           Foreground="White"
                           Margin="0,0,0,10" />
                <TextBox x:Name="UsernameTextBox"
                         Width="400"
                         Height="39"
                         Background="#2C3142"
                         Foreground="White"
                         BorderBrush="#3B82F6"
                         VerticalContentAlignment="Center"
                         TextAlignment="Left"
                         FontWeight="Bold" />
            </StackPanel>

            <Button x:Name="StartButton"
                    Content="Start"
                    Grid.Row="3"
                    Width="250"
                    Height="50"
                    Background="#3B82F6"
                    Foreground="White"
                    BorderThickness="0"
                    VerticalAlignment="Top"
                    Click="StartButton_Click"
                    Margin="0,20" />

            <TextBlock Text="Log Output"
                       Foreground="White"
                       Margin="0,95,788,220"
                       Grid.Row="3" />

            <TextBox x:Name="LogBox"
                     Grid.Row="3"
                     Margin="0,100,0,0"
                     Height="200"
                     Background="#2C3142"
                     Foreground="White"
                     BorderBrush="#3B82F6"
                     IsReadOnly="True"
                     VerticalScrollBarVisibility="Auto" />
        </Grid>
    </Border>
</Window>
